<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Body:</strong>
    <%= post.body %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published:</strong>
    <%= post.published? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Publication date:</strong>
    <%= post.publication_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= post.slug %>
  </div>
</div>
