 <article class="flex flex-col items-start justify-between">
  <div class="relative w-full">
      <% if post.featured_image.present? %> 
        <%= link_to post do %>
          <%= image_tag url_for(post.featured_image.image), alt: post.featured_image.alt_text, 
            class: "aspect-video w-full rounded-2xl bg-gray-100 object-cover sm:aspect-2/1 lg:aspect-3/2" %>
          <div class="absolute inset-0 rounded-2xl inset-ring inset-ring-gray-900/10"></div>
        <% end %>
      <% end %>
  </div>
  <div class="flex max-w-xl grow flex-col justify-between">
    <div class="mt-8 flex items-center gap-x-4 text-xs">
      <%= time_tag post.publication_date, "data-local": "time", "data-format": "%B %e, %Y", class: "text-gray-500" %>
      <% post.tags.slice(0..2).each do |tag| %>
        <%= link_to tag.name, tag, 
          class: "relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100" %>
      <% end %>
    </div>
    <div class="group relative grow">
      <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
        <%= link_to post do %>
          <span class="absolute inset-0"></span>
          <%= post.title %>
        <% end %>  
      </h3>
      <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600"><%= post.body.to_plain_text.truncate(180) %></p>
    </div>
    <div class="relative mt-8 flex items-center gap-x-4 justify-self-end">
      <%= image_tag url_for(post.author.avatar), alt: post.author.name, class: "size-10 rounded-full bg-gray-100" %>
      <div class="text-sm/6">
        <p class="font-semibold text-gray-900">
          <a href="#">
            <span class="absolute inset-0"></span>
            <%= post.author.name %>
          </a>
        </p>
      </div>
    </div>
  </div>
</article>
